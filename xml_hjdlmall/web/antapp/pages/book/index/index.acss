.goods-item{
    display: inline-block;
    margin: 16rpx 11.5rpx;
    font-size: 11pt;
    background-color: #ffffff;
}
.goods-title{
    color: #353535;
    width: 352rpx;
    padding: 20rpx;
    overflow:hidden; 
    text-overflow:ellipsis;
    display:-webkit-box; 
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2; 
    height: 90rpx;
    line-height: 1.2;
    font-size: 32rpx;
}

.price{
    padding: 20rpx;
    color: #ff4545;
}
.money{
    font-size: 13pt;
}
.go-book{
    width: 112rpx;
    height: 48rpx;
    border-radius: 24rpx;
    border:1rpx solid #ff4544;
    background-color: #fff5f5;
}