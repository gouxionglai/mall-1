.bar-bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
}

.submit-btn {
    background: #ff4544;
    color: #fff;
    height: 100rpx;
}

.goods-list {
    border-top: 1rpx solid #e3e3e3;
    padding-bottom: 100rpx;
}

.goods-item {
    background: #fff;
    border-bottom: 1rpx solid #e3e3e3;
    margin-bottom: 20rpx;
}

.goods-item .score-row {
    padding: 24rpx 20rpx;
    border-bottom: 1rpx #eee solid;
}

.goods-item .score-row .goods-pic {
    width: 72rpx;
    height: 72rpx;
}

.goods-item .score-row .score-item image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.goods-item .score-row .score-item.active {
    color: #ff4544;
}

.goods-item .content-row {
    padding: 24rpx 20rpx;
}

.goods-item .form-label {
    margin-right: 24rpx;
}

.goods-item textarea {
    width: 100%;
    height: 200rpx;
    padding: 0 0;
}

.goods-item .pic-list {
    padding: 24rpx 20rpx;
    margin-left: -20rpx;
    margin-top: -20rpx;
}

.image-picker {
    font-size: 0;
}

.image-picker,.image-preview {
    display: inline-block;
    margin-left: 20rpx;
    margin-top: 20rpx;
}

.image-preview {
    position: relative;
}

.image-preview .image-del {
    position: absolute;
    top: -15rpx;
    right: -15rpx;
    height: 50rpx;
    width: 50rpx;
    background: #ff4544;
    color: #fff;
    font-weight: bolder;
    border-radius: 999rpx;
    font-size: 9pt;
    box-shadow: 0 1rpx 2rpx rgba(0,0,0,.2);
    z-index: 999;
}