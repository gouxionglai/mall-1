.month-scroll {
    border-top: 1rpx solid #e3e3e3;
    height: 120rpx;
}

.month-list .month-item {
    width: 20vw;
    text-align: center;
    height: 120rpx;
    color: #888;
    line-height: 1;
}

.month-list .month-item.active {
    color: #e9ad33;
}

.current-year {
    color: #888;
}

.current-year .flex-grow-1::after {
    content: " ";
    display: block;
    width: 100%;
    height: 1rpx;
    background: #e3e3e3;
}

.current-year .flex-grow-1:first-child {
    padding-right: 40rpx;
}

.current-year .flex-grow-1:last-child {
    padding-left: 40rpx;
}

.detail-data {
    background: #fff;
    padding: 24rpx;
}

.detail-data .flex-grow-1 {
    width: 33.333333%;
}