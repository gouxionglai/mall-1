.block-button {
    display: block;
    padding: 0;
    margin: 0;
    font-size: inherit;
    line-height: inherit;
    background: none;
    height: 100%;
    border: none;
}

.block-button:after {
    display: none;
}

.header-h {
    background: #26a5ef;
    color: #fff;
    background: -webkit-gradient(linear,0 0,0 bottom,from(#44b9fe),to(#028dde));
    padding: 48rpx 0 32rpx;
    height: 380rpx;
    overflow: hidden;
}

.header-h .data-col {
    text-align: center;
    border-right: 1rpx solid rgba(255,255,255,0.35);
}

.header-h .data-col:last-child {
    border-right: none;
}

.menu-list {
    flex-wrap: wrap;
    background: #fff;
    padding: 80rpx 0 0;
}

.menu-list .menu-item {
    width: 33.333333%;
    text-align: center;
    font-size: 10pt;
}

.menu-list .menu-item button {
    display: inline-block;
    margin-bottom: 80rpx;
}

.menu-list .menu-item image {
    width: 94rpx;
    height: 94rpx;
    margin-bottom: 6rpx;
}

.pc-url {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 100;
    padding: 100rpx;
    visibility: hidden;
    opacity: .5;
    transition: 200ms;
}

.pc-url.show {
    visibility: visible;
    opacity: 1;
}

.pc-url .modal-bg {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.5);
}

.pc-url .modal-dialog {
    background: #fff;
    padding: 32rpx;
    border-radius: 16rpx;
    overflow: hidden;
    word-break: break-all;
    position: relative;
}