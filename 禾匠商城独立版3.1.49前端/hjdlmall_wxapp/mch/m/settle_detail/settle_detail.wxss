.settle {
    display: flex;
    flex-direction: column;
    padding: 0 24rpx;
    margin-top: 20rpx;
    background: #fff;
}

.settle .settle_status {
    height: 64rpx;
    font-size: 13pt;
    color: #353535;
    display: flex;
    align-items: center;
    margin-top: 15rpx;
}

.settle .price {
    font-size: 25pt;
    color: #353535;
    display: flex;
    justify-content: center;
    border-bottom: 1px solid #e2e2e2;
}

.settle .yuan {
    font-size: 13pt;
    align-self: flex-end;
    margin-bottom: 10rpx;
}

.settle .order_no_box {
    margin-top: 40rpx;
    display: flex;
}

.settle .order_no_text {
    margin-right: 32rpx;
    color: #353535;
    font-size: 13pt;
    width: 180rpx;
    text-align: right;
}

.settle .order_no {
    color: #999999;
}

.settle .goods_info_box {
    margin-top: 24rpx;
    display: flex;
}

.settle .goods_explain {
    margin-right: 32rpx;
    color: #353535;
    font-size: 13pt;
    width: 180rpx;
    text-align: right;
}

.settle .goods_name {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: #999999;
    margin-bottom: 40rpx;
}